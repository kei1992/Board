.container
  %ul
  - @board.errors.full_messages.each do |message|
    %li= message
  = form_with(model: @board, url: boards_path, method: 'post',local: true) do |f|
    %div
      = f.label :name, 'Name'
    %div
      = f.text_field :name, class: 'text'
    %div
      = f.label :description, 'Description'
    %div
      = f.rich_text_area :description
    %div
      = f.label :tag_list
    %div
      = f.text_field :tag_list, value: @board.tag_list.join(','), class: "form-control"
    = f.submit 'Submit', class: 'btn-first'
