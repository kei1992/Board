.container
  =render 'commons/createboard'
  .container-board
    %h2.text-info All Board
    .row.mx-auto.card_row
      - @boards.each do |board|
        .card.col-12.col-md-5.mx-auto
          .card_content
            .card_name
              = board.name
            .card_description
              = board.description
            .card_readmore
              =link_to board_tasks_path(board) do
                %p Read More >>
            .card_detail
              = image_tag board.user.avatar_image
            .card_detail_name.d-flex
              %p User IDï¼š
              %p= board.user.id
            - if user_signed_in? && current_user.has_written?(board)
              .board_detail_actions
                = link_to 'Edit', edit_board_path(board),class:'btn btn-info'
                = link_to 'Delete', board_path(board), data: {method: 'delete', confirm: 'Are you sure you want to destroy? '},class:'btn btn-danger'

    -# =render 'commons/createboardindex'
    =paginate @boards
    =javascript_pack_tag 'board'
    =render 'commons/footer'