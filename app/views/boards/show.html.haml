.container
  %i.fa.fa-angle-double-left
  =link_to 'Back',boards_path
  .board#board-show{data:{board_id: @board.id}}
    %h2= @board.name

    - @tasks.each do |task|
      .card
        -# -if user_signed_in?
        -#   .card_bookmark.hidden.active-bookmark
        -#     =link_to board_bookmark_path(@board),data: {method:'delete'} do
        -#       %i.fa.fa-2x.fa-bookmark.bookmarkchange
        -#   .card_bookmark.hidden.inactive-bookmark
        -#     =link_to board_bookmark_path(@board),data: {method: 'post'} do
        -#       %i.fa.fa-2x.fa-bookmark.bookmark
        =link_to board_task_path(@board,task) do
          - if task.eyecatch&.attached?
            = image_tag task.eyecatch, class:'task_eyecatch'
          - else
            = image_tag 'background-default.png',class:'task_eyecatch'
          .card_name
            = task.name
          .card_description
            = task.description
          .card_detail
            = image_tag task.user.avatar_image
            .card_btn
              %p= task.comment_count
              %i.fa.fa-comments.fa-2x.fa-fw


    -# new task作成
    .new_board
      = link_to new_board_task_path(@board), class:'board_button' do
        .float_btn
          %i.fa.fa-plus
        %p Add new card