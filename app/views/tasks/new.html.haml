.container
  %ul
  - @task.errors.full_messages.each do |message|
    %li= message


  = form_with(model: @task, url: board_tasks_path, method: 'post', local: true) do |f|
    %div
      = f.label :eyecatch,'Eyecatch'
    %div
      = f.file_field :eyecatch,class:'text'
    %div
      = f.label :name, 'Name'
    %div
      = f.text_field :name, class: 'text'
    %div
      = f.label :description, 'Description'
    %div
      = f.rich_text_area :description
    %div
      = f.label :deadline, 'Deadline'
    %div
      = f.date_field :deadline, class:'text'
    = f.submit 'Submit', class: 'btn-first'