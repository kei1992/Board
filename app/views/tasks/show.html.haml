.container
  .task
    .task_title
      %h2.task_name= @task.name
      .board_detail.actions
        .dropdown
          = image_tag 'actions.svg',class:'dropbtn'
          .dropdown-content.mini
            = link_to 'Edit', edit_board_task_path(@board,@task)
            = link_to 'Delete', board_task_path(@board,@task), data:{method:'delete',confirm:'Are you sure you want to destroy?'}
    - if @task.eyecatch&.attached?
      = image_tag @task.eyecatch, class:'task_eyecatch'
    - else
      = image_tag 'task_sample.png',class:'task_eyecatch'
    .card
      .card_content
        .card_description
          = @task.description

  %h2.task_comment Comment
  - @comments.each do |comment|
    .comment
      .comment_image
        = image_tag current_user.avatar_image
      .comment_description
        = comment.description


  -# コメント投稿ボタン
  .new_board
    = link_to new_board_task_comment_path(@board.id,@task.id),class:'board_button' do
      .float_btn
        %i.fa.fa-plus
      %p Add new comment