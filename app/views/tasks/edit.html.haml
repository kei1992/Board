.container
  %ul
  - @task.errors.full_messages.each do |message|
    %li= message


  = form_with(model: @task, url: board_task_path(@board,@task), method: 'put', local: true, class: 'mb-5') do |f|
    %div
      = f.label :name,'Eyecatch'
    %di
      = f.file_field :eyecatch, class:'text'
    %div
      = f.label :name, 'Name'
    %div
      = f.text_field :name, class: 'text'
    %div
      = f.label :description, 'Description'
    %div
      = f.rich_text_area :description
    = f.submit 'Submit', class: 'btn-primary'