!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title TodoappTry
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
    %link{:href => "https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css", :rel => "stylesheet"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
  %body
  %header.header
    %p.header_pageTitle
      = link_to 'Boards' ,root_path
    -# - if user_signed_in?
    -#   = link_to mybookmarks_path do
    -#     .header_bookmark
    -#       %i.fa.fa-2x.fa-bookmark.bookmark
    -#       %div.header_bookmark_number 5
    -#   .header_bell
    -#     %i.fa.fa-2x.fa-bell.bell_icon
    -#     %div.header_bell_number 30
    -#   .header_comment
    -#     %i.fa.fa-2x.fa-comments.comment_icon
    -#     %p.header_comment_number 10

    - if user_signed_in?
      .dropdown
        = image_tag current_user.avatar_image, class: 'header_avatar dropbtn'
        .dropdown-content
          = link_to 'Add new board',new_board_path
          - if current_user.profile.present?
            = link_to 'Profile',profile_path
          -else
            = link_to 'Edit Profile',edit_profile_path
          = link_to 'Sign Out', destroy_user_session_path, data: { method: 'delete' }


  - if flash.present?
    .flash
      - flash.each do |key, value|
        %div{:class => key}= value
  = yield
